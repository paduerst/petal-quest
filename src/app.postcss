html,
body {
	@apply h-full overflow-hidden;
}

/* Typography Classes from Skeleton UI, plus edits */
h1 {
	@apply h1 my-3 font-semibold;
}
h2 {
	@apply h2;
}
h3 {
	@apply h3;
}
h4 {
	@apply h4;
}
h5 {
	@apply h5;
}
h6 {
	@apply h6;
}
p {
	@apply my-2;
}
a {
	@apply anchor;
}
blockquote {
	@apply blockquote;
}
pre {
	@apply pre;
}
code {
	@apply code;
}
kbd {
	@apply kbd;
}
del {
	@apply del;
}
ins {
	@apply ins;
}
